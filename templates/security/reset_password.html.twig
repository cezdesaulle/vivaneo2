{% extends 'base.html.twig' %}

{% block body %}

    <div class="well">
        <form method="post" action="{{ path('reset_password', {'token': token}) }}" class="form-horizontal">
            <fieldset>
                <legend>Modifier le mot de passe</legend>
                <div class="form-group">
                    <label for="inputValidepassword" class="col-md-4">Nouveau</label>
                    <div class="col-md-8">
                        <input class="form-control" name="password" id="inputValidepassword" placeholder="Nouveau" type="text">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputValidepasswordconfirm" class="col-md-4">Confirmation</label>
                    <div class="col-md-8">
                        <input class="form-control" name="plainpassword" id="inputValidepasswordconfirm" placeholder="Confirmation" type="text">
                    </div>
                </div>
                <input type="hidden" name="token" value="{{ token }}">
                <div class="form-group">
                    <div class="col-md-8 col-md-offset-4">
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>




{% endblock %}



