{% extends 'base.html.twig' %}

{% block body %}
    <div class="container animate__animated animate__backInUp">
        <h1>Liste des utilisateurs</h1>

        <table class="table table-light table-hover" style="border-radius: 5px">
            <thead class="thead-dark">
            <tr>
                <th class="text-center" scope="col">Email</th>
                <th class="text-center" scope="col">Nom</th>
                <th class="text-center" scope="col">Prénom</th>
                <th class="text-center" scope="col">Contacter</th>
                <th class="text-center" scope="col">Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for utilisateur in utilisateurs %}
                <tr>
                    <td class="text-center">{{ utilisateur.email }}</td>
                    <td class="text-center">{{ utilisateur.nom }}</td>
                    <td class="text-center">{{ utilisateur.prenom }}</td>
                    <td class="text-center">
                        <a href="{{ path('contact', {'id': utilisateur.id}) }}"> <img
                                    src="{{ asset('img/user.png') }}" alt="contact utilisateur"> </a>
                    </td>
                    <td class="text-center">
                        <a onclick="return confirm('Etes vous sûr de vouloir supprimer cet utilisateur?');"
                           href="{{ path('supprimerutilisateur', {'id': utilisateur.id}) }}"
                           class="btn-delete"> <img src="{{ asset('img/trash.png') }}"
                                                    alt="suppression utilisateur"></a>
                    </td>

                </tr>
            {% endfor %}

            </tbody>

        </table>


    </div>



{% endblock %}

