{% extends 'base.html.twig' %}
{% block body %}


    <div class="row">

        <div class="col-md-9">

            <h2>Contacter l'annonceur</h2>

            <div class="well">
                <form method="post" action="{{ path('envoimail') }}" class="form-horizontal">

                    <fieldset>
                        <legend>Contacter l'annonceur</legend>
                        <div class="form-group">
                            <label for="inputName" class="col-md-4">Nom</label>
                            <div class="col-md-8">
                                <input class="form-control" name="nom" value="{{ app.user.prenom }}" id="inputName" placeholder="Nom" type="text">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputEmail" class="col-md-4">E-mail</label>
                            <div class="col-md-8">
                                <input class="form-control" name="email" value="{{ app.user.email }}" id="inputEmail" placeholder="Adresse e-mail" type="text">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="TextareaMessage" class="col-md-4">Votre message</label>
                            <div class="col-md-8">
                                <textarea name="message" class="form-control" id="TextareaMessage" placeholder="Votre message"
                                          rows="6"></textarea>
                            </div>
                        </div>
                        <input type="hidden" name="annonceur" value="{{ annonceur.email }}">

                        <div class="form-group">
                            <div class="col-md-8 col-md-offset-4">
                                <button type="submit" class="btn btn-primary">Envoyer votre message</button>
                            </div>
                        </div>
                    </fieldset>
                </form>

            </div>

        </div><!-- /.col-md-9 -->


        <div class="col-md-3">

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Panel Category</h3>
                        </div>
                        <ul class="list-group">
                            {% for categorie in categories %}
                                <a href="#" class="list-group-item">{{ categorie.nom }}</a>
                            {% endfor %}

                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </div> <!-- /.container -->
    <br><br>




{% endblock %}