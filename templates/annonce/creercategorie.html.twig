{% extends 'base.html.twig' %}

{% block body %}

    <div class="well">
        <form method="post" action="{{ path('creercategorie') }}" class="form-horizontal">
            <fieldset>
                <legend>Créer une catégorie</legend>
                <div class="form-group">
                    <label for="inputName" class="col-md-4">Nom de la Catégorie</label>
                    <div class="col-md-8">
                        <input class="form-control" name="nom" id="inputName" placeholder="Nom de la Catégorie"
                               type="text">
                    </div>
                </div>
            </fieldset>
            <div class="form-group">
                <div class="col-md-8 col-md-offset-4">
                    <button type="submit" class="btn btn-primary">Créer</button>
                </div>
            </div>
        </form>


    </div>

{% endblock %}

