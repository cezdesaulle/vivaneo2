{% extends 'base.html.twig' %}

{%  block body %}
    <!-- Heading Row -->
    <div class="row">
        <div class="col-md-3">

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Tableau de bord</h3>
                        </div>
                        <ul class="list-group">
                            <a href="{{ path('tableauidentite') }}" class="list-group-item">Identit√©</a>
                            <a href="{{ path('tableaumail') }}" class="list-group-item">E-mail</a>
                            <a href="{{ path('tableaupassword') }}" class="list-group-item">Mot de passe</a>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.col-md-9 -->
        <div class="col-md-9">

            <div class="well">
                <form method="post" action="{{ path('modifmail') }}" class="form-horizontal">
                    <fieldset>
                        <legend>Modifier l'e-mail</legend>
                        <div class="form-group">
                            <label for="inputEmail" class="col-md-4">E-mail</label>
                            <div class="col-md-8">
                                <input value="{{ utilisateur.email }}" name="email" class="form-control" id="inputEmail" placeholder="E-mail" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputValideemail" class="col-md-4">Mot de passe</label>
                            <div class="col-md-8">
                                <input class="form-control" name="password" id="inputValideemail" placeholder="Indiquer votre mot de passe pour confirmer l'email" type="text">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-8 col-md-offset-4">
                                <button type="submit" class="btn btn-primary">Enregistrer</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>


        </div>
    </div>
    <!-- /.row -->


{% endblock %}